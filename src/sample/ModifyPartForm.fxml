<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="500.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainController">
   <children>
      <HBox layoutX="57.0" layoutY="28.0" prefHeight="25.0" prefWidth="295.0">
         <children>
            <Label prefHeight="18.0" prefWidth="94.0" text="Modify Part">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin>
               <font>
                  <Font name="Trebuchet MS Bold" size="14.0" />
               </font>
            </Label>
            <RadioButton fx:id="inHouseMod" mnemonicParsing="false" onAction="#selectRadioMod" text="In House">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="outSourcedMod" mnemonicParsing="false" onAction="#selectRadioMod" text="Outsourced" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="86.0" layoutY="142.0" prefHeight="16.0" prefWidth="200.0">
         <children>
            <Label text="ID">
               <HBox.margin>
                  <Insets right="15.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="idTextfieldModPart" disable="true" editable="false" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="59.0" layoutY="179.0" prefHeight="25.0" prefWidth="227.0">
         <children>
            <Label text="Name">
               <HBox.margin>
                  <Insets right="15.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="nameTextfieldModPart" alignment="CENTER_RIGHT" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="53.0" layoutY="216.0" prefHeight="25.0" prefWidth="233.0">
         <children>
            <Label text="Inventory">
               <HBox.margin>
                  <Insets right="15.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="inventoryTextfieldModPart" alignment="CENTER_RIGHT" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="40.0" layoutY="256.0" prefHeight="25.0" prefWidth="245.0">
         <children>
            <Label text="Price/Cost">
               <HBox.margin>
                  <Insets right="15.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="priceTextfieldModPart" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="86.0" layoutY="289.0" prefHeight="26.0" prefWidth="267.0">
         <children>
            <Label text="Max">
               <HBox.margin>
                  <Insets right="15.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="maxTextfieldModPart" prefHeight="26.0" prefWidth="85.0" />
            <Label layoutX="10.0" layoutY="15.0" text="Min">
               <HBox.margin>
                  <Insets left="7.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="minTextfieldModPart" layoutX="53.0" layoutY="10.0" prefHeight="26.0" prefWidth="85.0">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="7.0" layoutY="332.0" prefHeight="26.0" prefWidth="279.0">
         <children>
            <Label fx:id="machineIdTextModPart" text="Machine ID">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="machineIdTextfieldModPart">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="141.0" layoutY="406.0" prefHeight="38.0" prefWidth="157.0">
         <children>
            <Button fx:id="saveModPart" mnemonicParsing="false" onAction="#saveModifiedPart" text="Save">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" text="Cancel">
               <HBox.margin>
                  <Insets bottom="5.0" left="35.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
